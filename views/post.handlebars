<div class="post">
    <h2>{{post.title}}</h2>
    <p>{{post.content}}</p>
    <p>Posted by {{post.author}} on {{post.date}}</p>
</div>
<div class="comments">
    {{#each post.comments}}
        <div class="comment">
            <p>{{this.content}}</p>
            <p>Comment by {{this.author}}</p>
        </div>
    {{/each}}
</div>
